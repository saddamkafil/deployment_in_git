pipeline
{
    agent{
    label 'slave'}
    stages
    {
        stage('Download')
        {
            steps
            {
                git 'https://github.com/saddamkafil/deployment_in_git.git'
            }
        }
        stage('build')
        {
        steps{
                script {
                  def mvnhome = tool name: 'M2_HOME', type: 'maven'
                  sh "${mvnhome}/bin/mvn --version"
                  sh "${mvnhome}/bin/mvn clean package"
                }
                }
        }
    }
}
